<form action="/users/register" method="POST" class="h-100">

  <div class="col-sm-8 text-center mb-5">
    <h1>註冊使用者</h1>
  </div>

  <div class="form-group row ml-2 mb-5 text-center">
    <span>*必填欄位</span>
    <div class="col-sm-5 text-center">
      <span>請輸入使用者資料</span>
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="name" class="col-sm-2 col-form-label">名稱*:</label>
    <div class="col-sm-5">
      <input type="text" class="form-control border-dark" id="name" name="name" value="{{name}}" placeholder="使用者名稱">
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="email" class="col-sm-2 col-form-label">Email*:</label>
    <div class="col-sm-5">
      <input type="text" class="form-control border-dark" id="email" name="email" value="{{email}}"
        placeholder="使用者Email">
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="password" class="col-sm-2 col-form-label">密碼*:</label>
    <div class="col-sm-5">
      <input type="text" class="form-control border-dark" id="password" name="password" placeholder="使用者密碼">
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="confirm_password" class="col-sm-2 col-form-label">確認密碼*:</label>
    <div class="col-sm-5">
      <input type="text" class="form-control border-dark" id="confirm_password" name="confirm_password"
        placeholder="請再輸入一次密碼">
    </div>
  </div>

  <div class="col-sm-8 text-center">
    <button class="btn btn-success mr-2" type="submit">註冊使用者</button>
    <a href="/users/login" class="btn btn-success">返回登入頁</a>
  </div>
</form>