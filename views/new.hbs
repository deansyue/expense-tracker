<form action="/expenses" method="POST" class="h-100">


  <div class="form-group row ml-2 mb-5 text-center">
    {{> message}}
    <span>*必填欄位</span>
    <div class="col-sm-5 text-center">
      <span>請輸入你的支出</span>
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="name" class="col-sm-2 col-form-label">名稱*:</label>
    <div class="col-sm-5">
      <input type="text" class="form-control border-dark" id="name" name="name" value="{{name}}" placeholder="支出名稱">
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="date" class="col-sm-2 col-form-label">日期*:</label>
    <div class="col-sm-5">
      <input type="date" class="form-control border-dark" id="date" name="date" value="{{date}}" placeholder="支出日期"
        size="5">
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="category" class="col-sm-2 col-form-label">類別*:</label>
    <div class="col-sm-5">
      <select id="category" name="categoryId" class="form-control border-dark">
        {{#if selected_category}}
        <option value="{{selected_category._id}}">{{selected_category.name}}</option>
        {{else}}
        <option value="" selected>Select</option>
        {{/if}}

        {{#each categories}}
        <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="form-group row ml-2 mb-5">
    <label for="amount" class="col-sm-2 col-form-label">金額*:</label>
    <div class="col-sm-5">
      <input type="number" class="form-control border-dark" id="amount" name="amount" value="{{amount}}"
        placeholder="支出金額">
    </div>
  </div>
  <div class="col-sm-8 text-center">
    <button class="btn btn-success mr-2" type="submit">新增支出</button>
    <a href="/" class="btn btn-success">返回</a>
  </div>
</form>